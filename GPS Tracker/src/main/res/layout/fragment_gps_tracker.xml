<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.idesade.gpstracker.MainActivity$PlaceholderFragment">

	<fragment xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/map"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:name="com.google.android.gms.maps.SupportMapFragment"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/button_gps_tracker_start"
		android:id="@+id/button_gps_tracker_start"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/button_gps_tracker_stop"
		android:id="@+id/button_gps_tracker_stop"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="60dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_gps_tracker_load_track"
        android:id="@+id/button_gps_tracker_load_track"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_gps_tracker_track_info"
        android:id="@+id/text_gps_tracker_track_info"
        android:layout_below="@+id/button_gps_tracker_start"
        android:layout_alignLeft="@+id/button_gps_tracker_start"
        android:layout_alignStart="@+id/button_gps_tracker_start"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
